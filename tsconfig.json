{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["ES2020", "DOM"],
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "src/*": ["src/*"],
      "common/*": ["src/common/*"],
      "modules/*": ["src/modules/*"],
      "migrations/*": ["src/migrations/*"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2021"
  },
  "include": ["src/migrations/*", "src/**/*"],
  "exclude": ["node_modules"]
}
